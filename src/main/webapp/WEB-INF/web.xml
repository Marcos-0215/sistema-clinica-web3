<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <servlet>
        <servlet-name>PacienteServlet</servlet-name>
        <servlet-class>br.com.marcosandre.sistemaclinica.sistemadeclinica.controllers.PacienteServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MedicoServlet</servlet-name>
        <servlet-class>br.com.marcosandre.sistemaclinica.sistemadeclinica.controllers.MedicoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MedicamentoServlet</servlet-name>
        <servlet-class>br.com.marcosandre.sistemaclinica.sistemadeclinica.controllers.MedicamentoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>IndicadorExameServlet</servlet-name>
        <servlet-class>br.com.marcosandre.sistemaclinica.sistemadeclinica.controllers.IndicadorExameServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PacienteServlet</servlet-name>
        <url-pattern>/PacienteServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MedicoServlet</servlet-name>
        <url-pattern>/MedicoServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MedicamentoServlet</servlet-name>
        <url-pattern>/MedicamentoServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>IndicadorExameServlet</servlet-name>
        <url-pattern>/IndicadorExameServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
